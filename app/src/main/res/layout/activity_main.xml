<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/v"
    tools:context=".MainActivity">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:layout_marginLeft="2dp"
        android:id="@+id/edittextSearch"
        android:hint="Thành Phố"
        android:layout_width="290dp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginLeft="20dp"
        android:text="OK"
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

    <TextView android:layout_marginTop="2dp"
    android:textSize="25dp"
    android:text="Tên Thành Phố"
    android:id="@+id/Name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<ImageView
    android:id="@+id/imageviewIcon"
    android:layout_gravity="center"
    android:layout_marginTop="40dp"
    android:layout_width="150dp"
    android:layout_height="150dp" />

    <TextView
        android:id="@+id/textviewTemp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#005EFF"
        android:text="Nhiệt Độ"
        android:textSize="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textviewTrangthai"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Trạng Thái"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="96dp"
                android:layout_height="63dp"
                android:src="@drawable/a" />
            <TextView
                android:id="@+id/textviewHum"
                android:layout_gravity="center"
                android:text="Độ ẩm"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="96dp"
                android:layout_height="63dp"
                android:src="@drawable/b" />


            <TextView
                android:id="@+id/textviewCloud"
                android:layout_gravity="center"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:text="Mây"
                android:textSize="20dp" />
            android:layout_gravity="center"
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:layout_width="96dp"
                android:layout_height="63dp"
                android:src="@drawable/gio" />

            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/textviewNhietdo"
                android:layout_gravity="center"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="Gió"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:id="@+id/textviewDay"
        android:text="Ngày Cập Nhật"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/Nextday"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Xem chi tiết hơn " />
</LinearLayout>